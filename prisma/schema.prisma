generator client {
   provider = "prisma-client"
   output   = "../src/generated/prisma"
}

datasource db {
   provider = "postgresql"
}

model Country {
   id        Int      @id @default(autoincrement())
   name      String
   leader    Leader[]
   createdAt DateTime @default(now())
}

model Leader {
   id         Int       @id @default(autoincrement())
   countryId  Int
   name       String
   party      String
   leaning    Int
   tookOffice DateTime
   leftOffice DateTime?
   Country    Country   @relation(fields: [countryId], references: [id])
   createdAt  DateTime  @default(now())

   @@index([countryId])
   @@index([createdAt])
   @@index([tookOffice])
   @@map("Leader")
}
